<section class="new-post">
    <button type="submit" class="btn" id="new_post">+ Creat new post</button>
</section>

{{#if posts.length}}
<section>
    <h2>Dashboard</h2>
    <u class="posts">
        {{#each posts as |post|}}
            <li class="post">
                <a href="/post/{{post._id}}">{{post.title}}</a>
                <button type="submit" class="btn" id="delete_post">Delete</button>
            </li>
        {{/each}}
    </u>
</section>
{{else}}
    <p>No posts yet</p>
{{/if}}

<script src="/public/js/create-post.js"></script>






